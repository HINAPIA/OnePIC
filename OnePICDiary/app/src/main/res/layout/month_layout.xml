<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/monthImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/current_day"
        app:tint="@color/month"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ohmu"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/monthImageView"
        app:layout_constraintEnd_toEndOf="@+id/monthImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/monthImageView"
        tools:text="10" />
</androidx.constraintlayout.widget.ConstraintLayout>