<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="100dp"

        android:background="@drawable/bottombar_round"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/focusBtn"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent_color"
            android:drawableTop="@drawable/focus_icon_resize"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/focus"
            android:textSize="12sp" />

        <Button
            android:id="@+id/rewindBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent_color"
            android:drawableTop="@drawable/rewind_icon_resize"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/rewind"
            android:textSize="12sp" />

        <Button
            android:id="@+id/removeBtn"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent_color"
            android:drawableTop="@drawable/remove_icon_resize"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/remove"
            android:textSize="12sp" />

        <Button
            android:id="@+id/magicBtn"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.5dp"
            android:layout_weight="1"
            android:background="@color/transparent_color"
            android:drawableTop="@drawable/magic_icon_resize"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/magicPicture"
            android:textSize="12sp" />

        <Button
            android:id="@+id/addBtn"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent_color"
            android:drawableTop="@drawable/add_icon_resize"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/add"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>