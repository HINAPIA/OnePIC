<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:fontFamily="@font/abril_fatface"
        android:textColor="@color/dark_purple"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_centerline5"
        app:layout_constraintEnd_toStartOf="@+id/vertical_centerline2"
        app:layout_constraintStart_toStartOf="@+id/vertical_centerline"
        app:layout_constraintTop_toTopOf="@+id/horizontal_centerline4" />

    <ToggleButton
        android:id="@+id/basic_toggle"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_centerInParent="true"
        android:background="@drawable/basic_toggle_selector"
        android:padding="6dp"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toTopOf="@+id/horizontal_centerline5"
        app:layout_constraintEnd_toStartOf="@+id/vertical_centerline4"
        app:layout_constraintStart_toStartOf="@+id/vertical_centerline3"
        app:layout_constraintTop_toTopOf="@+id/horizontal_centerline4" />


    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_centerline2"
        app:layout_constraintTop_toTopOf="@+id/horizontal_centerline1"
        app:layout_constraintVertical_bias="1.0"
        app:scaleType="fitCenter"
        tools:layout_editor_absoluteX="0dp" >

    </androidx.camera.view.PreviewView>

    <TextView
        android:id="@+id/singleToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single"
        android:textColor="@color/white"
        android:background="@drawable/single_toast_custom"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_centerline7"
        app:layout_constraintEnd_toStartOf="@+id/vertical_centerline2"
        app:layout_constraintStart_toStartOf="@+id/vertical_centerline"
        app:layout_constraintTop_toTopOf="@+id/horizontal_centerline6" />

    <TextView
        android:id="@+id/burstToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Burst"
        android:textColor="@color/white"
        android:background="@drawable/burst_toast_custom"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_centerline7"
        app:layout_constraintEnd_toStartOf="@+id/vertical_centerline2"
        app:layout_constraintStart_toStartOf="@+id/vertical_centerline"
        app:layout_constraintTop_toTopOf="@+id/horizontal_centerline6" />

<!--    <androidx.appcompat.widget.AppCompatButton-->
<!--        android:id="@+id/shutter_button"-->
<!--        android:layout_width="70dp"-->
<!--        android:layout_height="70dp"-->
<!--        android:background="@drawable/shutter_button"-->
<!--        android:elevation="2dp"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintEnd_toStartOf="@+id/vertical_centerline2"-->
<!--        app:layout_constraintStart_toEndOf="@id/vertical_centerline"-->
<!--        app:layout_constraintTop_toTopOf="@+id/horizontal_centerline3" />-->

    <ImageView
        android:id="@+id/shutter_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/camera_shutter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vertical_centerline2"
        app:layout_constraintStart_toEndOf="@id/vertical_centerline"
        app:layout_constraintTop_toTopOf="@+id/horizontal_centerline3" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_centerline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontal_centerline2"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/basic_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:button="@drawable/null_radio_button"
                    android:checked="true"
                    android:gravity="center"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="5dp"
                    android:stateListAnimator="@null"
                    android:text="@string/basic_option"
                    android:textColor="@drawable/radio_text_selector" />

                <RadioButton
                    android:id="@+id/object_focus_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:button="@drawable/null_radio_button"
                    android:gravity="center"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="5dp"
                    android:stateListAnimator="@null"
                    android:text="@string/object_focus_option"
                    android:textColor="@drawable/radio_text_selector" />

                <RadioButton
                    android:id="@+id/distance_focus_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:button="@drawable/null_radio_button"
                    android:gravity="center"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="5dp"
                    android:stateListAnimator="@null"
                    android:text="@string/distance_focus_option"
                    android:textColor="@drawable/radio_text_selector" />

                <RadioButton
                    android:id="@+id/auto_rewind_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:button="@drawable/null_radio_button"
                    android:gravity="center"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="5dp"
                    android:stateListAnimator="@null"
                    android:text="@string/auto_rewind_option"
                    android:textColor="@drawable/radio_text_selector" />

            </RadioGroup>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gallery_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/gallery_button"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vertical_centerline6"
        app:layout_constraintStart_toEndOf="@id/vertical_centerline5"
        app:layout_constraintTop_toTopOf="@+id/horizontal_centerline3"
        tools:ignore="SpeakableTextPresentCheck"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_centerline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_centerline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_centerline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_centerline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".66" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_centerline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_centerline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_centerline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.01" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_centerline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_centerline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_centerline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_centerline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.14" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_centerline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.79" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_centerline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.83" />

</androidx.constraintlayout.widget.ConstraintLayout>